set -e

PRGNAM=magicpoint
VERSION=1.12a
ARCH=${ARCH:-i486}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
CWD=`pwd`		
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
fi

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar -xzvf $CWD/$PRGNAM-$VERSION.tar.gz
cd $PRGNAM-$VERSION
chown -R root:root .
chmod -R u+w,go+r-w,a-s .

# Add --enable-freetype-charset16 if you are using a wide character
# set, e.g. for Japanese users.
CFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --enable-locale \
  --enable-gif \
  --enable-imlib

xmkmf
make Makefiles
make
make install DESTDIR=$PKG LIBDIR=/etc BINDIR=/usr/bin
make install.man DESTDIR=$PKG DOCHTMLDIR=/usr/doc/$PRGNAM-$VERSION \
  MANPATH=/usr/man MANSUFFIX=1

install -m 0755 contrib/mgp2html.pl $PKG/usr/bin/mgp2html
install -m 0755 contrib/mgp2latex.pl $PKG/usr/bin/mgp2latex

# Don't overwrite the configuration file after an upgrade
mv $PKG/etc/mgp/default.mgp $PKG/etc/mgp/default.mgp.new

find $PKG | xargs file | grep "executable" | grep ELF | cut -f 1 -d : \
  | xargs strip --strip-unneeded 2> /dev/null

# Fix permissions
chmod 644 $PKG/etc/mgp/*
chmod 644 $PKG/usr/man/man1/*
chmod 644 $PKG/usr/doc/$PRGNAM-$VERSION/*


( cd $PKG/usr/man
  find . -type f -exec gzip -9 {} \;
  for i in `find . -type l` ; do ln -s $( readlink $i ).gz $i.gz ; rm $i ; done
)

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a FAQ README README.fonts README.fonts.jp README.lang README.m17n \
  README.xft RELNOTES SYNTAX TODO.jp USAGE USAGE.jp sample \
  $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

# Remove cruft
rm -rf $PKG/usr/doc/$PRGNAM-$VERSION/sample/CVS \
  $PKG/usr/doc/$PRGNAM-$VERSION/sample/.cvsignore \
  $PKG/usr/doc/$PRGNAM-$VERSION/sample/Imakefile* \
  $PKG/usr/doc/$PRGNAM-$VERSION/sample/Makefile

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.tgz
