# Modified by the SlackBuilds.org project

APP=bbrun
VERSION=1.6
ARCH=i386 #Leave this alone
BUILD=${BUILD:-2}
TAG=${TAG:-_SBo}
START=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$APP
OUTPUT=${OUTPUT:-/tmp}

rm -rf $PKG $TMP/$APP-$VERSION
mkdir -p $TMP $PKG $OUTPUT

cd $TMP || exit 1
tar xvf $START/$APP-$VERSION.tar.gz || exit 1
cd $APP-$VERSION || exit 1
chown -R root:root .
chmod -R u+w,go+r-w,a-s .

cd bbrun || exit 1
  make || exit 1
  install -m 0755 -D bbrun $PKG/usr/bin/bbrun
  strip --strip-unneeded $PKG/usr/bin/bbrun
cd -

mkdir -p $PKG/usr/doc/$APP-$VERSION
cp -a COPYING CREDITS Changelog README $PKG/usr/doc/$APP-$VERSION 
cp $START/$APP.SlackBuild $PKG/usr/doc/$APP-$VERSION/
find $PKG/usr/doc/$APP-$VERSION -type f -exec chmod 644 {} \;

mkdir -p $PKG/install
cat $START/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$APP-$VERSION-$ARCH-$BUILD$TAG.tgz
