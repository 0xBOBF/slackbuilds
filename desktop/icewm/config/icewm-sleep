#!/bin/bash

# This is used for Slackware 14.2
/usr/bin/dbus-send \
  --system \
  --print-reply \
  --dest="org.freedesktop.UPower" \
  /org/freedesktop/UPower \
  org.freedesktop.UPower.Suspend 2>/dev/null

