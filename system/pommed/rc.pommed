#!/bin/sh

# Start/stop/restart the pommed service:

pommed_start() {
  /usr/sbin/pommed
}

pommed_stop() {
  killall pommed
}

pommed_restart() {
  pommed_stop
  sleep 1
  pommed_start
}

case "$1" in
'start')
  pommed_start
  ;;
'stop')
  pommed_stop
  ;;
'restart')
  pommed_restart
  ;;
*)
  echo "usage $0 start|stop|restart"
esac

