#!/bin/sh -eu

# Slackware build script for PBZIP2
# Written by Erik Hanson  erik@slackbuilds.org

PRGNAM=pbzip2
VERSION=1.0.3
ARCH=${ARCH:-i486}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
fi

rm -rf $PKG
mkdir -p $TMP $PKG
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$PRGNAM-$VERSION.tar.gz
cd $PRGNAM-$VERSION
chown -R root:root .
chmod -R u+w,go+r-w,a-s .

# Hack to add march/mtune
sed -i "s/-O2/${SLKCFLAGS}/" Makefile

# Build
make

# DESTDIR isn't supported, install manually
mkdir -p $PKG/usr/{bin,man/man1,doc/$PRGNAM-$VERSION} $PKG/install

# Binary
cp pbzip2 $PKG/usr/bin/pbzip2
strip --strip-unneeded $PKG/usr/bin/pbzip2 2> /dev/null
chmod a+x $PKG/usr/bin/pbzip2

# Man page
cp pbzip2.1 $PKG/usr/man/man1
gzip -9 $PKG/usr/man/man1/pbzip2.1
chmod a+r $PKG/usr/man/man1/pbzip2.1.gz

cp -a AUTHORS COPYING ChangeLog README $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.tgz
